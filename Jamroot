local BOOST_DIR = "/opt/boost_1_65" ;
local MAPNIK_DIR = "/opt/mapnik" ;
local ICU_DIR = "/opt/mapnik_deps" ;
local BOOST_GEOMETRY = "/home/artem/projects/geometry" ;

lib mapnik :<name>mapnik :<search>$(MAPNIK_DIR)/lib ;
lib mapnik-wkt :<name>mapnik-wkt :<search>$(MAPNIK_DIR)/lib ;

exe comparable-distance-test
    :
    main.cpp
    .//mapnik
    .//mapnik-wkt
    :
    <include>$(BOOST_GEOMETRY)/include
    <include>$(BOOST_DIR)/include
    <include>$(MAPNIK_DIR)/include
    <include>$(ICU_DIR)/include
    <include>$(MAPNIK_DIR)/include/mapnik
    <cxxflags>-std=c++14
    <linkflags>-L$(MAPNIK_DIR)/lib
    ;
